{% extends 'base-admin.html.twig' %}

{% block title %}CategorieS{% endblock %}

{% block body %}
    <a href="{{ path('admin_category_index') }}" class="btn btn-dark mb-3">Retour a la liste</a>
    <h1>CategorieS</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ category.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ category.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ category.imageName }}</td>
            </tr>
            <tr>
                <th>Mise a jour le :</th>
                <td>{{ category.updatedAt ? category.updatedAt|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ category.slug }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex justify-content-around align-items-end">
    {{ include('admin_category/_delete_form.html.twig') }}
    <a href="{{ path('admin_category_edit', {'id': category.id}) }}" class="btn btn-success"><i class="align-middle" data-feather="edit-2"></i></a> 
    </div>
{% endblock %}
