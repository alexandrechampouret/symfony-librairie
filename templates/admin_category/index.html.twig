{% extends 'base-admin.html.twig' %}

{% block title %}Liste des catégories{% endblock %}

{% block body %}
    <h1>Liste des catégories</h1>
    <a href="{{ path('admin_category_new') }}" class="btn btn-success">Nouveau</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                {#<th>Description</th>#}
                {#<th>ImageName</th>
                <th>UpdatedAt</th>#}
                <th>Slug</th>
                <th class="text-end">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.title }}</td>
                {#<td>{{ category.description }}</td>
                <td>{{ category.imageName }}</td>
                <td>{{ category.updatedAt ? category.updatedAt|date('Y-m-d H:i:s') : '' }}</td>#}
                <td>{{ category.slug }}</td>
                <td class="text-end">
                    <a href="{{ path('admin_category_show', {'id': category.id}) }}" class="btn btn-primary me-2"><i class="align-middle" data-feather="eye"></i></a>
                    <a href="{{ path('admin_category_edit', {'id': category.id}) }}" class="btn btn-success"><i class="align-middle" data-feather="edit-2"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucune entrée trouvée.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
