{% extends 'base-admin.html.twig' %}

{% block title %}Auteurs{% endblock %}

{% block body %}
    <a href="{{ path('admin_author_index') }}" class="btn btn-dark mb-3">Retour a la liste</a>
    <h1>Auteurs</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ author.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ author.name }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ author.firstname }}</td>
            </tr>
            <tr>
                <th>Pseudo</th>
                <td>{{ author.pseudo }}</td>
            </tr>
            <tr>
                <th>Date anniversaire</th>
                <td>{{ author.birthdate ? author.birthdate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Date de décès</th>
                <td>{{ author.dateOfDeath ? author.dateOfDeath|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ author.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ author.imageName }}</td>
            </tr>
            <tr>
                <th>Mise a jour</th>
                <td>{{ author.updatedAt ? author.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex justify-content-around align-items-end">
    {{ include('admin_author/_delete_form.html.twig') }}
    <a href="{{ path('admin_author_edit', {'id': author.id}) }}"class="btn btn-success"><i class="align-middle" data-feather="edit-2"></i></a> 
    </div>

{% endblock %}
