{% extends 'base-admin.html.twig' %}

{% block title %}Book{% endblock %}

{% block body %}
    <a href="{{ path('admin_book_index') }}" class="btn btn-dark mb-3">Retour a la liste</a>
    <h1>Book</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ book.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ book.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ book.description }}</td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td>{{ book.imageName }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ book.updatedAt ? book.updatedAt|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex justify-content-around align-items-end">
    {{ include('admin_book/_delete_form.html.twig') }}
    <a href="{{ path('admin_book_edit', {'id': book.id}) }}"class="btn btn-success"><i class="align-middle" data-feather="edit-2"></i></a> 
    </div>

{% endblock %}
